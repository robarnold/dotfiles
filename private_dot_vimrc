syntax on
se nu
se softtabstop=2
se shiftwidth=2
se expandtab
se hidden
se noswapfile
filetype on
autocmd FileType c,cpp,java,h,hpp :set cindent
autocmd FileType sml,py,sig :set autoindent
autocmd FileType sig :set ft=sml
se backspace=indent,eol,start
se visualbell
se t_Co=256
let g:zenburn_high_Contrast = 1
colorscheme zenburn
hi search ctermbg=223 ctermfg=238
hi incsearch ctermbg=216 ctermfg=242
se popt=paper:letter

if has("gui_running")
  if has("gui_gtk3")
    set guifont=Monospace\ 16
    colorscheme slate
  endif
endif